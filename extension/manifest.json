{
  "manifest_version": 2,

  "name": "Raud.io",
  "description": "Browser tab live streaming.",
  "version": "1.0",

  "background": {
    "scripts": ["global-chrome.js"]
  },

  "permissions": [
    "activeTab",
    "tabCapture"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_security_policy": "script-src 'self' https://localhost.com:3000; object-src 'self'"
}
